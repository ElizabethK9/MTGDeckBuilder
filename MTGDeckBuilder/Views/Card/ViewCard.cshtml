@model MTGDeckBuilder.Models.GameCard

@{
    ViewData["Title"] = "View Information";
}

@if(Model != null)
{
    <div class="card" style="width: 18rem; margin: 1rem; text-align:center">
        <img src="@Html.DisplayFor(model => model.cardImageURL)" class="card-img-top" alt="...">
        <div class="card-body">          
            <div>
                <dl class="row">
                    <h5 class="card-title">
                        @Html.DisplayFor(model => model.CardName)
                    </h5>
                    <dt class="col-sm-10">
                        @Html.DisplayNameFor(model => model.ManaCost)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ManaCost)
                    </dd>
                    <dt class="col-sm-10">
                        @Html.DisplayNameFor(model => model.CardType)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.CardType)
                    </dd>
                    <dt class="col-sm-10">
                        @Html.DisplayNameFor(model => model.CardSubtype)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.CardSubtype)
                    </dd>
                    <dt class="col-sm-10">
                        @Html.DisplayNameFor(model => model.CardSet)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.CardSet)
                    </dd>
                                     
                    <dt class="col-sm-10">
                        @Html.DisplayNameFor(model => model.CreaturePower)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.CreaturePower)
                    </dd>
                    <dt class="col-sm-10">
                        @Html.DisplayNameFor(model => model.CreatureToughness)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.CreatureToughness)
                    </dd>
                    <dt class="col-sm-10">
                        @Html.DisplayNameFor(model => model.CollectorNumber)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.CollectorNumber)
                    </dd>
                </dl>
            </div>
        </div>
    </div>
    
}
else
{
    <p> Card could not be found</p>    
}
<div>
    <a asp-action="CardSearch">Back to List</a>
</div>
